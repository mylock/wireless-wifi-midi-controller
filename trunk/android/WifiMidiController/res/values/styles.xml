<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="layout_basic">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
	</style>
	<style name="layout_list_row" parent="@style/layout_basic">
		<item name="android:stretchColumns">4</item>
	</style>

	<style name="view_piano_roll" parent="@style/layout_basic">
		<item name="android:background">@drawable/background</item>
		<item name="android:scaleType">matrix</item>
		<item name="android:visibility">visible</item>
		<item name="android:hapticFeedbackEnabled">true</item>
		<item name="android:focusableInTouchMode">true</item>
	</style>

	<style name="list_row_icon">
		<item name="android:src">@drawable/app_wwmc</item>
		<item name="android:layout_width">36px</item>
		<item name="android:layout_height">36px</item>
		<item name="android:layout_marginLeft">20px</item>
		<item name="android:layout_marginTop">20px</item>
	</style>
	<style name="list_row_label" parent="@android:style/TextAppearance.Medium">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">50px</item>
		<item name="android:textSize">10sp</item>
		<item name="android:textColor">@color/wwmc_back</item>
	</style>
	<style name="list_row_value" parent="@android:style/TextAppearance.Medium">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">3dip</item>
		<item name="android:textSize">18sp</item>
	</style>
	<style name="list_row_flag">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginRight">20px</item>
	</style>

</resources>
